<br>

<h4> Name: <%= @climb.name %> </h4>
<h4> Difficulty: <%= @climb.difficulty%> </h4>
<h4> Crag: <%= @climb.location %> </h4>
<h4> Climb Type: <%= @climb.climb_type.name %> </h4> <br>

<%= form_for @climb.comments.build do |f| %>
  <%= f.hidden_field :climb_id, value: @climb.id %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <br>
  <%= f.label :content %> <br>
  <%= f.text_area :content %>
  <br>
  
  
  <%= f.submit %>
<% end %>
<br><br>

<h3> Comments </h3>

<% if @climb.comments %>
  <% @climb.comments.each do |comment|%>
    <% if comment.id != nil %>
      <%="#{comment.user.email} says: #{comment.content}."%>
      <br> <br>
    <% end %>
  <% end %>
<% end %>
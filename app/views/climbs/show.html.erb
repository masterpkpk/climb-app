<br>

<%= @climb.name %> <br>
<%= @climb.difficulty%> <br>
<%= @climb.location %> <br> <br>

<%= form_for @climb.comments.build do |f| %>
  <%= f.hidden_field :climb_id, value: @climb.id %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <br>
  <%= f.label :content %> <br>
  <%= f.text_area :content %>
  <br>
  
  
  <%= f.submit %>
<% end %>
<br><br>

<h3> Comments </h3>

<% if @climb.comments %>
  <% @climb.comments.each do |comment|%>
    <% if comment.id != nil %>
      <%="#{comment.user.email} says: #{comment.content}."%>
      <br> <br>
    <% end %>
  <% end %>
<% end %>